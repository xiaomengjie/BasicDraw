<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XfermodeView">
        <attr name="xfermode" format="string"/>
    </declare-styleable>

    <declare-styleable name="MultiLineTextView">
        <attr name="imagePaddingTop" format="dimension"/>
        <attr name="imagePaddingEnd" format="dimension"/>
        <attr name="imageSize" format="dimension"/>
        <attr name="imageSrc" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UnderlineView">
        <attr name="type" format="enum">
            <enum name="path" value="0" />
            <enum name="region" value="1" />
        </attr>
        <attr name="family" format="string" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="HighlightTextView">
        <attr name="start" format="string"/>
        <attr name="end" format="string"/>
        <attr name="color" format="reference|color"/>
    </declare-styleable>
    
    <declare-styleable name="CircleAvatarView">
        <attr name="avatar" format="reference"/>
        <attr name="sideWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ScalableImageView">
        <attr name="src" format="reference"/>
        <attr name="image_width" format="dimension"/>
        <attr name="scalable" format="boolean"/>
    </declare-styleable>
</resources>